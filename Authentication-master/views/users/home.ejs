<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
      /* Global styles */
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Ensure the page takes up at least the height of the viewport */
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        flex: 1;
      }

      header {
        background-color: #343a40;
        color: #fff;
        padding: 20px;
        text-align: center;
      }

      nav ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        text-align: center;
      }
      nav ul li {
        display: inline;
        margin-right: 20px;
      }
      nav ul li a {
        text-decoration: none;
        color: #fff;
        font-weight: bold;
      }

      .nav-icon {
        display: none;
        color: #fff;
        font-size: 24px;
        cursor: pointer;
      }

      @keyframes slideUp {
        0% {
          transform: translateY(100px);
          opacity: 0;
        }
        100% {
          transform: translateY(0);
          opacity: 1;
        }
      }
      .hero h1 {
        font-size: 3em;
        margin-bottom: 20px;
      }
      /* Gallery styles */
      .gallery-container {
        border: 2px solid #343a40; /* Add border */
        border-radius: 10px; /* Add border radius */
        padding: 20px;
        margin-bottom: 20px; /* Add margin */
      }
      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
      }
      .gallery img {
        width: 100%;
        height: auto;
        transition: transform 0.3s ease-in-out;
        cursor: pointer;
        border: 2px solid #ddd; /* Add border */
        border-radius: 5px; /* Add border radius */
      }
      .gallery img:hover {
        transform: scale(1.05);
      }

      /* Contact form styles */
      #contact-form {
        border: 2px solid #343a40; /* Add border */
        padding: 20px;
        border-radius: 10px; /* Add border radius */
      }
      #contact-form .form-group {
        margin-bottom: 20px;
      }
      #contact-form label {
        font-weight: bold;
      }
      #contact-form textarea {
        height: 150px;
      }

      /* Footer styles */
      footer {
        background-color: #343a40;
        color: #fff;
        text-align: center;
        padding: 20px;
      }
      /* Responsive styles */
      @media (max-width: 768px) {
        .hero h1 {
          font-size: 2em;
        }
        nav ul {
          display: none;
          position: absolute;
          top: 60px;
          left: 0;
          width: 100%;
          background-color: #343a40;
          z-index: 99;
        }
        nav ul.active {
          display: block;
        }
        nav ul li {
          display: block;
          margin-top: 10px;
          margin-bottom: 10px;
        }
        .nav-icon {
          display: block;
        }
      }
      .profile-photo{
        border: 1px solid black;
        width: 50px;
        height: 50px;
        border-radius: 50%;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <!-- <h1 style="text-align: center;">Responsive Homepage</h1> -->
          </div>
          <div class="col-md-6 text-right">
            <!-- Profile Photo -->
            <img src="https://cdn.pixabay.com/photo/2017/10/08/12/17/forest-2829736_1280.jpg" alt="Profile Photo" class="profile-photo">
            <!-- Logout Button -->
            <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </div>
        </div>
      </div>
      <span class="nav-icon"><i class="fas fa-bars"></i></span>
      <nav>
        <ul>
          <li><a href="#home">Home</a></li>
          <li><a href="#about">About</a></li>
          <li><a href="#services">Services</a></li>
          <li><a href="#gallery">Gallery</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
      </nav>
    </header>

    <div class="container" id="home">
      <h2>Carousel Example</h2>
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="height: 70vh">
          <div class="item active">
            <img
              src="https://cdn.pixabay.com/photo/2023/07/20/16/20/mountain-8139762_1280.jpg"
              alt="Los Angeles"
              style="width: 100%"
            />
          </div>

          <div class="item">
            <img
              src="https://cdn.pixabay.com/photo/2017/07/20/16/54/schrecksee-2522908_1280.jpg"
              alt="Chicago"
              style="width: 100%"
            />
          </div>

          <div class="item">
            <img
              src="https://cdn.pixabay.com/photo/2020/03/03/20/31/boat-4899802_1280.jpg"
              alt="New york"
              style="width: 100%"
            />
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="hero" id="about">
      <div class="container">
        <h1>Welcome to our website</h1>
        <p>This is a simple responsive homepage template.</p>
      </div>
    </div>

    <div class="container" id="services">
      <h2>About Us</h2>
      <p>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet
        risus nec risus accumsan rhoncus. Vestibulum vehicula vel est eu
        pellentesque.
      </p>
      <h2>Our Services</h2>
      <p>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet
        risus nec risus accumsan rhoncus. Vestibulum vehicula vel est eu
        pellentesque.
      </p>
    </div>

    <!-- Gallery section -->
    <div class="container" id="gallery">
      <h2>Gallery</h2>
      <div class="gallery-container">
        <div class="gallery">
          <a
            href="https://cdn.pixabay.com/photo/2024/04/01/05/18/green-8667981_1280.jpg"
            target="_blank"
          >
            <img
              src="https://cdn.pixabay.com/photo/2024/04/01/05/18/green-8667981_1280.jpg"
              alt="Image 1"
            />
          </a>
          <img
            src="https://cdn.pixabay.com/photo/2017/08/06/21/05/balloon-2596321_1280.jpg"
            alt="Image 2"
          />
          <img
            src="https://cdn.pixabay.com/photo/2017/01/24/03/53/plant-2004483_1280.jpg"
            alt="Image 3"
          />
          <img
            src="https://cdn.pixabay.com/photo/2015/11/16/16/28/bird-1045954_1280.jpg"
            alt="Image 4"
          />

          <!-- Repeat this block for each image -->
        </div>
      </div>
    </div>

    <div class="container" id="contact">
      <h2>Contact Us</h2>
      <form id="contact-form">
        <div class="form-group">
          <label for="name">Name:</label>
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Enter your name"
          />
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Enter your email"
          />
        </div>
        <div class="form-group">
          <label for="message">Message:</label>
          <textarea
            class="form-control"
            id="message"
            rows="3"
            placeholder="Enter your message"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <footer>
      <p>&copy; 2022 Your Company Name. All rights reserved.</p>
    </footer>

    <script>
      $(document).ready(function () {
        $(".nav-icon").click(function () {
          $("nav ul").toggleClass("active");
        });

        // Smooth scrolling for internal links
        $('a[href^="#"]').on("click", function (event) {
          var target = $(this.getAttribute("href"));
          if (target.length) {
            event.preventDefault();
            $("html, body").stop().animate(
              {
                scrollTop: target.offset().top,
              },
              1000
            );
          }
        });

        // Lightbox for gallery images
        $(".gallery a").simpleLightbox();
      });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/simplelightbox/2.8.0/simple-lightbox.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/simplelightbox/2.8.0/simple-lightbox.min.css"
    />
  </body>
</html>
